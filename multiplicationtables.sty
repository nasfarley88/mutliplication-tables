\luadirect{dofile("multiplicationtables.lua")}
\NewDocumentCommand{\mtable}{soomm}{
  \luadirect{mtableWithTikz({#4}, {#5},
    \IfBooleanTF{#1}{true}{false},
    \IfValueTF{#2}{"#2"}{"1.0cm"},
    \IfValueTF{#3}{"-#3"}{"-1.0cm"}
    )
  }
}
\newcommand*{\mtableblank}[2]{\mtable*{#1}{#2}}
\newcommand*{\mtablelarge}[2]{\mtable[1.4cm][1.4cm]{#1}{#2}}

